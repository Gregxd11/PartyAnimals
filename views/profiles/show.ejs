<% include ../partials/header %>

<a class="btn btn-outline-primary mt-4" href="/profiles/<%=currentUser._id%>/edit">Edit profile</a>

<div class="container">
    <div class="row text-center">
        <div class="col-12">
            <h2><strong><%= currentUser.username %></strong></h2>
        </div>
        <div class="col-12">
            <img src="<%= currentUser.image %>" class="img-thumbnail mb-2" alt="profile-picture">
        </div>
        <div class="col-12">
            <h3>
                <i class="fas fa-map-marker-alt"></i> <%= currentUser.location%>
            </h3>
        </div>
    </div>
</div>


<% include ../partials/footer %>