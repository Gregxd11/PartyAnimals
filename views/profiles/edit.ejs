<% include ../partials/header %>

<div class="container">
    <div class="row">
        <form action="/profiles/<%= currentUser._id %>?_method=DELETE" method="POST" class="my-2">
            <button class="btn btn-danger">Delete Profile</button>
        </form>
        <div class="col-12 text-center my-3">
            <h1>Edit Profile</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form action="/profiles/<%= currentUser._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[username]" value="<%= currentUser.username%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[image]" value="<%= currentUser.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[location]" value="<%= currentUser.location %>" placeholder="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/profiles/<%=currentUser._id%>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>