<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center my-3">
            <h1>Edit Profile</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form action="/profile/<%= currentUser._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[name]" value="<%= currentUser.username%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[image]" value="<%= currentUser.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[location]" value="<%= currentUser.location %>" placeholder="location">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/profile">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>