
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center my-3">
            <h1>Edit <%= animal.name %></h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form action="/animals/<%= animal._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="animal[name]" value="<%= animal.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="animal[price]" value=" <%= animal.price%>" min="0.50"
                        step="0.50">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="animal[image]" value="<%= animal.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="animal[description]" value="<%= animal.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/animals">Go Back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>