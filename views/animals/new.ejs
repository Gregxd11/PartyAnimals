<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-12 text-center my-3">
            <h1>Create a New Animal Post</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <form action="/animals" method="POST">
                <div class="text-center">
                    <p class="mb-0">What type of post would you like to make?</p>
                    <label class="radio-inline pr-3">
                        <input id="offer" type="radio" name="postType" value="offer" checked> Offer
                    </label>
                    <label class="radio-inline">
                        <input id="request" type="radio" name="postType" value="request"> Request
                    </label>
                </div>
                <div class="form-group mb-1">
                    <input class="form-control" type="text" name="name" placeholder="name/species of animal">
                </div>
                <div class="form-group mb-1">
                    <input class="form-control" type="number" name="price" placeholder="price per hour (USD)" min="1" step="1">
                </div>
                <div class="form-group mb-1">
                    <input id="imageUrl" class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group text-center">
                    <p class="mb-0">Brief description of offer/request</p>
                    <textarea class="form-control" type="text" name="description"  maxlength="3000"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/animals">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>